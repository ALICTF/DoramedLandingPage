                    btn.disabled = false;
                    btn.innerText = originalText;
                    btn.classList.replace('bg-green-500', 'bg-doramed-primary');
                }, 3000);
            }, 1000);
        });
    }

    // --- 2. Bookmark Logic (Same as before) ---
    const bookmarkBtns = document.querySelectorAll('.bookmark-btn');
    const savedBookmarks = JSON.parse(localStorage.getItem('doramed_bookmarks') || '[]');
    bookmarkBtns.forEach(btn => {
        const slug = btn.getAttribute('data-slug');
        const icon = btn.querySelector('.icon');
        if (savedBookmarks.includes(slug)) {
            icon.setAttribute('fill', 'currentColor');
            btn.classList.add('text-doramed-primary');
            btn.classList.remove('text-gray-300');
        }
        btn.addEventListener('click', (e) => {
            e.preventDefault();
            const currentBookmarks = JSON.parse(localStorage.getItem('doramed_bookmarks') || '[]');
            if (currentBookmarks.includes(slug)) {
                const newBookmarks = currentBookmarks.filter(s => s !== slug);
                localStorage.setItem('doramed_bookmarks', JSON.stringify(newBookmarks));
                icon.setAttribute('fill', 'none');
                btn.classList.remove('text-doramed-primary');
                btn.classList.add('text-gray-300');
            } else {
                currentBookmarks.push(slug);
                localStorage.setItem('doramed_bookmarks', JSON.stringify(currentBookmarks));
                icon.setAttribute('fill', 'currentColor');
                btn.classList.add('text-doramed-primary');
                btn.classList.remove('text-gray-300');
            }
        });
    });
</script>