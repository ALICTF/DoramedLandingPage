---
// src/components/about/CeoSection.astro
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface CeoProps {
    name: string;
    role: string;
    image: ImageMetadata;
    quote: string;
    bio: string;
}

interface Props {
    ceo: CeoProps;
}

const { ceo } = Astro.props;
---

<section class="container mx-auto px-4 mb-32 relative z-10 scroll-reveal">
    <div class="bg-white rounded-[2.5rem] shadow-2xl shadow-gray-200/50 border border-white relative overflow-hidden">
        <div class="grid md:grid-cols-12 gap-0">
            
            <div class="md:col-span-5 relative min-h-[400px] md:h-auto overflow-hidden group">
                <Image 
                    src={ceo.image} 
                    alt={ceo.name} 
                    class="absolute inset-0 w-full h-full object-cover object-top transition-transform duration-1000 group-hover:scale-105" 
                />
                
                <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-60"></div>
                
                <div class="absolute bottom-6 right-6 md:bottom-8 md:right-8 bg-white/95 backdrop-blur-sm p-4 pr-5 rounded-2xl shadow-lg border-l-4 border-doramed-primary max-w-[200px]">
                    <p class="text-xs font-bold text-gray-400 uppercase mb-1 tracking-wider">{ceo.role}</p>
                    <p class="text-sm font-black text-gray-900 leading-tight">{ceo.name}</p>
                </div>
            </div>

            <div class="md:col-span-7 p-8 md:p-16 flex flex-col justify-center bg-white relative">
                
                <div class="absolute inset-0 opacity-[0.03] pointer-events-none" 
                     style="background-image: radial-gradient(#444 1px, transparent 1px); background-size: 20px 20px;">
                </div>

                <svg class="w-20 h-20 text-doramed-primary/10 absolute top-8 left-8" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M14.017 21L14.017 18C14.017 16.8954 14.9124 16 16.017 16H19.017C19.5693 16 20.017 15.5523 20.017 15V9C20.017 8.44772 19.5693 8 19.017 8H15.017C14.4647 8 14.017 8.44772 14.017 9V11C14.017 11.5523 13.5693 12 13.017 12H12.017V5H22.017V15C22.017 18.3137 19.3307 21 16.017 21H14.017ZM5.0166 21L5.0166 18C5.0166 16.8954 5.91203 16 7.0166 16H10.0166C10.5689 16 11.0166 15.5523 11.0166 15V9C11.0166 8.44772 10.5689 8 10.0166 8H6.0166C5.46432 8 5.0166 8.44772 5.0166 9V11C5.0166 11.5523 4.56889 12 4.0166 12H3.0166V5H13.0166V15C13.0166 18.3137 10.3303 21 7.0166 21H5.0166Z" />
                </svg>
                
                <div class="relative z-10">
                    <span class="text-doramed-primary font-bold text-xs bg-blue-50 px-3 py-1 rounded-full mb-4 inline-block">دیدگاه ما</span>
                    <h2 class="text-2xl md:text-3xl font-black text-gray-900 mb-6">چشم‌انداز آینده سلامت</h2>
                    
                    <p class="text-xl font-medium text-gray-700 leading-9 mb-8 italic">
                        "{ceo.quote}"
                    </p>
                    
                    <div class="h-px w-full bg-gray-100 mb-8"></div>

                    <p class="text-gray-500 leading-8 text-justify text-sm md:text-base font-light">
                        {ceo.bio}
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>