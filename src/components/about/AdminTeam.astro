---
// src/components/about/AdminTeam.astro
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro'; 

interface Member {
    name: string;
    role: string;
    image: ImageMetadata;
    bio: string;
}

interface Props {
    team: Member[];
}

const { team } = Astro.props;
---

<section class="container mx-auto px-4 mb-24 relative">
    
    <div class="text-center mb-16">
        <span class="text-emerald-600 font-bold text-xs uppercase tracking-wider bg-emerald-50 px-3 py-1 rounded-full mb-3 inline-block">توسعه کسب‌وکار</span>
        <h2 class="text-3xl font-black text-gray-900">تیم مدیریتی و اجرایی</h2>
    </div>
    
    <div class="flex flex-wrap justify-center gap-8">
        {team.map((member) => (
            <div class="group bg-white rounded-[2rem] p-6 border border-gray-100 shadow-lg hover:shadow-2xl hover:-translate-y-2 transition-all duration-500 w-full sm:w-80">
                
                <div class="relative w-40 h-40 mx-auto mb-6 rounded-full overflow-hidden shadow-md border-[5px] border-white group-hover:border-emerald-50 transition-all duration-500">
                    <Image 
                        src={member.image} 
                        alt={member.name} 
                        width={300} 
                        height={300} 
                        class="w-full h-full object-cover filter grayscale group-hover:grayscale-0 scale-105 group-hover:scale-100 transition-all duration-500" 
                    />
                </div>

                <div class="text-center">
                    <h3 class="text-xl font-black text-gray-900 mb-2 group-hover:text-emerald-600 transition-colors">
                        {member.name}
                    </h3>
                    
                    <p class="text-xs font-bold text-emerald-600 uppercase tracking-wider mb-4 bg-emerald-50 inline-block px-3 py-1 rounded-full">
                        {member.role}
                    </p>

                    <p class="text-sm text-gray-500 leading-7 line-clamp-3 group-hover:line-clamp-none transition-all duration-500">
                        {member.bio}
                    </p>
                </div>
            </div>
        ))}
    </div>
</section>