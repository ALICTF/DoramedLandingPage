<section class="bg-gray-900 text-white py-12 md:py-16 mb-24 md:mb-32 relative overflow-hidden transform -skew-y-2 origin-top-left md:origin-center shadow-2xl shadow-gray-900/20">
    <div class="absolute inset-0 bg-doramed-primary/10 bg-[length:30px_30px] opacity-10" style="background-image: radial-gradient(white 1px, transparent 1px);"></div>
    <div class="container mx-auto px-4 transform skew-y-2">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
            {stats.map((stat, i) => (
                <div class="text-center group" style={`animation-delay: ${i * 100}ms`}>
                    <div class="text-3xl md:text-5xl font-black text-transparent bg-clip-text bg-gradient-to-b from-white to-gray-400 mb-2 group-hover:scale-110 transition-transform duration-300" dir="ltr">
                        {stat.value}
                    </div>
                    <div class="text-gray-400 font-bold text-xs md:text-sm tracking-wider uppercase">
                        {stat.label}
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>