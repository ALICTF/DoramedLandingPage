---
// src/components/Features.astro

// لیست ویژگی‌ها (دیتای ما)
const features = [
  {
    title: "تحلیل هوشمند تصاویر",
    description: "الگوریتم‌های پیشرفته ما تصاویر پزشکی را با دقت ۹۹٪ تحلیل کرده و ناهنجاری‌ها را تشخیص می‌دهند.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>`
  },
  {
    title: "امنیت داده‌ها",
    description: "تمام اطلاعات بیماران با پروتکل‌های رمزنگاری نظامی محافظت می‌شوند تا حریم خصوصی کاملاً حفظ شود.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.745 3.745 0 01-1.043 3.296 3.745 3.745 0 01-3.296 1.043A3.745 3.745 0 0112 21c-1.268 0-2.39-.63-3.068-1.593a3.746 3.746 0 01-3.296-1.043 3.745 3.745 0 01-1.043-3.296A3.745 3.745 0 013 12c0-1.268.63-2.39 1.593-3.068a3.745 3.745 0 011.043-3.296 3.746 3.746 0 013.296-1.043A3.746 3.746 0 0112 3c1.268 0 2.39.63 3.068 1.593a3.746 3.746 0 013.296 1.043 3.746 3.746 0 011.043 3.296A3.745 3.745 0 0121 12z" /></svg>`
  },
  {
    title: "گزارش‌دهی آنی",
    description: "نتایج تحلیل‌ها در کمتر از چند ثانیه آماده شده و به صورت داشبورد مدیریتی در اختیار پزشک قرار می‌گیرد.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" /></svg>`
  }
];
---

<section id="features" class="bg-gray-50 py-20">
    <div class="container mx-auto px-6">
        
        <div class="text-center max-w-2xl mx-auto mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">چرا دورامد را انتخاب کنید؟</h2>
            <p class="text-gray-600 text-lg">
                ما با ترکیب دانش پزشکی و هوش مصنوعی، ابزاری قدرتمند برای تشخیص دقیق‌تر ساخته‌ایم.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {features.map((item) => (
                <div class="bg-white p-8 rounded-2xl border border-gray-100 shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1 group">
                    
                    <div class="w-14 h-14 bg-blue-50 text-blue-600 rounded-xl flex items-center justify-center mb-6 group-hover:bg-blue-600 group-hover:text-white transition-colors duration-300">
                        <Fragment set:html={item.icon} />
                    </div>
                    
                    <h3 class="text-xl font-bold text-gray-900 mb-3">{item.title}</h3>
                    <p class="text-gray-600 leading-relaxed">{item.description}</p>
                </div>
            ))}
        </div>

    </div>
</section>