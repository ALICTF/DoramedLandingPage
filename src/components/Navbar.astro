// src/components/Navbar.astro
import { Image } from 'astro:assets';
import logoImg from '../assets/logo.png'; 

const pathname = new URL(Astro.request.url).pathname;

const isActive = (href: string) => {
    if (href === '/') return pathname === '/';
    return pathname.startsWith(href);
};

// لینک "درباره ما" به این آرایه اضافه شد
const navLinks = [
    { text: "خانه", href: "/" },
    { text: "وبلاگ", href: "/blog" },
    { text: "درباره ما", href: "/about" }, // <-- لینک جدید
];

const socialLinks = [
    { 
        name: 'تلگرام', 
        href: 'https://t.me/doramedco', 
        icon: 'telegram', 
        color: 'hover:bg-[#229ED9]', 
        shadow: 'hover:shadow-[#229ED9]/40' 
    },
    { 
        name: 'اینستاگرام', 
        href: 'https://www.instagram.com/doramed_ir', 
        icon: 'instagram', 
        color: 'hover:bg-gradient-to-tr from-[#FFB238] via-[#E01E5A] to-[#8A3AB9]', 
        shadow: 'hover:shadow-[#E01E5A]/40' 
    },
    { 
        name: 'تماس', 
        href: 'tel:05138334013', 
        icon: 'phone', 
        color: 'hover:bg-green-500', 
        shadow: 'hover:shadow-green-500/40' 
    },
];
---

<header class="fixed top-4 md:top-6 left-0 right-0 z-50 flex justify-center px-4" id="main-header">
    
    <div class="relative w-full max-w-[95%] md:w-auto md:max-w-none group transition-transform duration-300">
        
        <div class="absolute inset-0 rounded-full bg-gradient-to-r from-transparent via-doramed-primary/50 to-transparent bg-[length:200%_200%] animate-border-pulse pointer-events-none opacity-70"></div>
        
        <nav class="relative bg-white/80 backdrop-blur-xl rounded-full border border-white/50 shadow-2xl shadow-doramed-primary/10 px-4 py-2.5 flex justify-between items-center md:gap-8 md:min-w-[700px]">

            <a href="/" class="flex items-center gap-2 shrink-0 relative z-20" aria-label="خانه">
                <Image 
                    src={logoImg} 
                    alt="لوگوی دورامد" 
                    height={40}
                    loading="eager" 
                    class="h-8 md:h-10 w-auto object-contain" 
                />
            </a>

            <ul class="hidden md:flex items-center gap-1 bg-gray-50/80 p-1.5 rounded-full border border-gray-200/50 shadow-inner">
                {navLinks.map(link => {
                    const active = isActive(link.href);
                    return (
                        <li>
                            <a 
                                href={link.href} 
                                class={`relative px-5 py-2 rounded-full text-sm font-bold transition-all duration-300 flex items-center gap-2 overflow-hidden ${
                                    active 
                                    ? 'bg-doramed-primary text-white shadow-lg shadow-doramed-primary/30 ring-2 ring-doramed-primary/20' 
                                    : 'text-gray-500 hover:text-doramed-primary hover:bg-white hover:shadow-sm'
                                }`}
                            >
                                <span class="relative z-10">{link.text}</span>
                                {active && <div class="absolute inset-0 bg-gradient-to-tr from-white/20 to-transparent pointer-events-none"></div>}
                                {link.href === '/blog' && !active && (
                                    <span class="relative flex h-2 w-2">
                                      <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-doramed-primary opacity-75"></span>
                                      <span class="relative inline-flex rounded-full h-2 w-2 bg-doramed-primary"></span>
                                    </span>
                                )}
                            </a>
                        </li>
                    );
                })}
            </ul>

            <div class="hidden md:flex items-center gap-3 pl-1">
                {socialLinks.map(social => (
                    <a 
                        href={social.href} 
                        target={social.icon !== 'phone' ? "_blank" : "_self"}
