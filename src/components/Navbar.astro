<style>
    @keyframes border-pulse {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }
    .animate-border-pulse {
        animation: border-pulse 6s ease infinite;
    }
</style>

<script>
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    
    if(btn && menu) {
        // تابع برای بستن منو
        const closeMenu = () => {
            menu.classList.remove('scale-100', 'opacity-100');
            menu.classList.add('scale-95', 'opacity-0');
            setTimeout(() => {
                menu.classList.add('hidden');
            }, 300);
        };

        // تابع برای باز کردن منو
        const openMenu = () => {
            menu.classList.remove('hidden');
            requestAnimationFrame(() => {
                menu.classList.remove('scale-95', 'opacity-0');
                menu.classList.add('scale-100', 'opacity-100');
            });
        };

        // کلیک روی دکمه همبرگری
        btn.addEventListener('click', (e) => {
            e.stopPropagation(); // جلوگیری از بسته شدن فوری
            const isHidden = menu.classList.contains('hidden');
            if (isHidden) {
                openMenu();
            } else {
                closeMenu();
            }
        });

        // کلیک روی لینک‌های داخل منو
        menu.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
                closeMenu();
            });
        });

        // کلیک خارج از منو برای بستن
        document.addEventListener('click', (e) => {
            const isClickInsideMenu = menu.contains(e.target);
            const isClickOnBtn = btn.contains(e.target);
            const isMenuOpen = !menu.classList.contains('hidden');

            if (isMenuOpen && !isClickInsideMenu && !isClickOnBtn) {
                closeMenu();
            }
        });
    }
</script>
