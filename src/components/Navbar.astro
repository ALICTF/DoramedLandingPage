<style>
    @keyframes border-pulse {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }
    .animate-border-pulse {
        animation: border-pulse 6s ease infinite;
    }
    
    .menu-open #line-1 { transform: rotate(45deg) translate(5px, 6px); }
    .menu-open #line-2 { opacity: 0; }
    .menu-open #line-3 { transform: rotate(-45deg) translate(5px, -6px); }
</style>

<script>
    // تعریف تابع اصلی برای راه‌اندازی منو
    function initMobileMenu() {
        const btn = document.getElementById('mobile-menu-btn');
        const menu = document.getElementById('mobile-menu');

        // اگر دکمه یا منو در این صفحه وجود نداشتند، تابع را متوقف کن (جلوگیری از ارور)
        if (!btn || !menu) return;

        // تابع باز/بسته کردن منو
        const toggleMenu = (forceClose = false) => {
            const isHidden = menu.classList.contains('hidden');
            
            // اگر دستور بستن اجباری بود یا منو باز بود -> ببند
            if (forceClose || !isHidden) {
                // انیمیشن بسته شدن
                menu.classList.add('scale-y-0', 'opacity-0');
                btn.classList.remove('menu-open');
                
                setTimeout(() => {
                    menu.classList.add('hidden');
                }, 300); // صبر میکنیم انیمیشن تمام شود بعد hidden میکنیم
            } 
            // اگر منو بسته بود -> باز کن
            else {
                menu.classList.remove('hidden');
                btn.classList.add('menu-open');
                
                // انیمیشن باز شدن (با یک فریم تاخیر برای اعمال ترنزیشن)
                requestAnimationFrame(() => {
                    menu.classList.remove('scale-y-0', 'opacity-0');
                });
            }
        };

        // حذف ایونت‌لیسنرهای قبلی برای جلوگیری از تکرار (در صورت لود مجدد کامپوننت)
        // البته در ساختار ساده، تعریف مجدد متغیرها در اسکوپ تابع مشکل را حل میکند
        // اما کلیک را هندل میکنیم:

        // 1. کلیک روی دکمه همبرگری
        btn.onclick = (e) => {
            e.stopPropagation();
            toggleMenu();
        };

        // 2. کلیک بیرون از منو (بستن)
        const closeOnClickOutside = (e) => {
            // اگر منو باز بود و کلیک خارج از منو و دکمه بود
            if (!menu.classList.contains('hidden') && !menu.contains(e.target) && !btn.contains(e.target)) {
                toggleMenu(true); // بستن اجباری
            }
        };
        document.addEventListener('click', closeOnClickOutside);

        // 3. کلیک روی لینک‌های داخل منو (برای بستن منو پس از کلیک)
        menu.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => toggleMenu(true));
        });
    }

    // اجرای تابع با ایونت مخصوص Astro
    // این ایونت هم در لود اولیه و هم بعد از هر تغییر صفحه اجرا می‌شود
    document.addEventListener('astro:page-load', initMobileMenu);
</script>