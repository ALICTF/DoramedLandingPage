---
// src/components/LatestNews.astro
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

// گرفتن ۳ پست آخر
const latestPosts = (await getCollection('blog'))
    .filter(post => !post.data.draft)
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, 3);

// تابع فرمت تاریخ شمسی
const formatDate = (date: Date) => {
    return new Intl.DateTimeFormat('fa-IR', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
    }).format(date);
}
---

<section class="py-24 relative overflow-hidden bg-doramed-darker">
    
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
        <div class="absolute -top-24 -right-24 w-96 h-96 bg-doramed-primary/10 rounded-full blur-3xl"></div>
        <div class="absolute top-1/2 -left-24 w-72 h-72 bg-cyan-500/10 rounded-full blur-3xl"></div>
        <div class="absolute inset-0 opacity-[0.03]" style="background-image: radial-gradient(#fff 1px, transparent 1px); background-size: 30px 30px;"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
        
        <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-6">
            <div class="max-w-xl">
                <span class="text-cyan-400 font-bold tracking-wider text-sm mb-2 block">مجله سلامت دورامد</span>
                <h2 class="text-3xl md:text-5xl font-black text-white mb-4 leading-tight">
                    تازه ترین‌های <span class="text-transparent bg-clip-text bg-gradient-to-r from-doramed-primary to-cyan-400">تکنولوژی پزشکی</span>
                </h2>
                <div class="h-1.5 w-24 bg-gradient-to-r from-doramed-primary to-transparent rounded-full"></div>
            </div>

            <a href="/blog" class="hidden md:flex group items-center gap-3 px-6 py-3 rounded-full border border-white/10 hover:border-doramed-primary/50 hover:bg-doramed-primary/10 transition-all duration-300">
                <span class="text-white font-bold text-sm">آرشیو مقالات</span>
                <div class="w-8 h-8 rounded-full bg-doramed-primary flex items-center justify-center group-hover:scale-110 transition-transform">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="white" class="w-4 h-4">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
                    </svg>
                </div>
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {latestPosts.map((post, index) => (
                <a href={`/blog/${post.slug}`} class="group relative flex flex-col h-full">
                    
                    <div class="relative h-full bg-doramed-darker border border-white/5 rounded-[2rem] overflow-hidden transition-all duration-500 hover:-translate-y-2 hover:shadow-[0_20px_40px_-15px_rgba(6,182,212,0.15)] group-hover:border-white/10">
                        
                        <div class="relative h-60 overflow-hidden">
                            <div class="absolute inset-0 bg-gradient-to-t from-doramed-darker via-transparent to-transparent z-10 opacity-60"></div>
                            
                            <Image 
                                src={post.data.image} 
                                alt={post.data.title} 
                                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                            />
                            
                            <div class="absolute top-4 right-4 z-20">
                                <span class="px-3 py-1.5 rounded-xl bg-black/40 backdrop-blur-md border border-white/10 text-xs font-bold text-white shadow-lg group-hover:bg-doramed-primary group-hover:border-doramed-primary transition-colors">
                                    {post.data.tags[0]}
                                </span>
                            </div>
                        </div>

                        <div class="p-6 flex flex-col flex-grow relative">
                            <div class="flex items-center gap-3 text-xs text-gray-500 mb-4 font-medium">
                                <span class="flex items-center gap-1">
                                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                                    {formatDate(post.data.pubDate)}
                                </span>
                                <span class="w-1 h-1 rounded-full bg-gray-600"></span>
                                <span class="text-doramed-primary">زمان مطالعه: ۵ دقیقه</span>
                            </div>

                            <h3 class="text-xl font-bold text-white mb-3 line-clamp-2 leading-relaxed group-hover:text-cyan-400 transition-colors">
                                {post.data.title}
                            </h3>
                            
                            <p class="text-gray-400 text-sm leading-6 line-clamp-2 mb-6 flex-grow">
                                {post.data.description}
                            </p>

                            <div class="mt-auto pt-4 border-t border-white/5 flex items-center justify-between">
                                <span class="text-sm font-bold text-white group-hover:text-doramed-primary transition-colors">ادامه مطلب</span>
                                <div class="w-8 h-8 rounded-full border border-white/10 flex items-center justify-center text-gray-400 group-hover:bg-doramed-primary group-hover:border-doramed-primary group-hover:text-white transition-all duration-300">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 group-hover:-translate-x-0.5 transition-transform">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
                                    </svg>
                                </div>
                            </div>
                        </div>

                    </div>
                </a>
            ))}
        </div>
        
        <div class="mt-12 text-center md:hidden">
             <a href="/blog" class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-white/5 border border-white/10 text-white font-bold hover:bg-white/10 transition-colors">
                مشاهده همه مقالات
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
                </svg>
            </a>
        </div>

    </div>
</section>