---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";


const latestPosts = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat("fa-IR", {
    year: "numeric",
    month: "short", 
    day: "numeric",
  }).format(date);
};

const getReadTime = (text: string) => {
  const words = text.trim().split(/\s+/).length;
  return Math.ceil(words / 50) + 1; // فرمول ساده شده
};

const getCategoryColor = (tag: string) => {
  const colors: Record<string, string> = {
    تکنولوژی: "bg-blue-500/20 text-blue-300 border-blue-500/30",
    تغذیه: "bg-green-500/20 text-green-300 border-green-500/30",
    دیابت: "bg-rose-500/20 text-rose-300 border-rose-500/30",
    قلب: "bg-red-500/20 text-red-300 border-red-500/30",
    روانشناسی: "bg-purple-500/20 text-purple-300 border-purple-500/30",
  };
  return colors[tag] || "bg-gray-500/20 text-gray-300 border-gray-500/30"; // پیش‌فرض
};
---

<section
  class="py-24 relative overflow-hidden bg-[#0B1120]"
  aria-labelledby="latest-news-title"
>
  <div class="absolute inset-0 overflow-hidden pointer-events-none select-none">
    <div
      class="absolute -top-[20%] -right-[10%] w-[600px] h-[600px] bg-doramed-primary/20 rounded-full blur-[120px] animate-pulse-slow"
    >
    </div>
    <div
      class="absolute top-[40%] -left-[10%] w-[500px] h-[500px] bg-cyan-600/10 rounded-full blur-[100px] animate-pulse-slower"
    >
    </div>
    <div
      class="absolute inset-0 opacity-[0.05]"
      style="background-image: linear-gradient(rgba(255, 255, 255, 0.05) 1px, transparent 1px), linear-gradient(90deg, rgba(255, 255, 255, 0.05) 1px, transparent 1px); background-size: 40px 40px;"
    >
    </div>
  </div>

  <div class="container mx-auto px-4 md:px-6 relative z-10">
    <div
      class="flex flex-col md:flex-row justify-between items-end mb-16 gap-6 border-b border-white/5 pb-8"
    >
      <div class="max-w-2xl relative">
        <span
          class="inline-flex items-center gap-2 text-cyan-400 font-bold tracking-wider text-xs md:text-sm mb-3 uppercase bg-cyan-950/30 px-3 py-1 rounded-full border border-cyan-500/20"
        >
          <span class="w-1.5 h-1.5 rounded-full bg-cyan-400 animate-ping"
          ></span>
          مجله سلامت دورامد
        </span>
        <h2
          id="latest-news-title"
          class="text-3xl md:text-4xl lg:text-5xl font-black text-white mb-4 leading-tight"
        >
          تازه ترین‌های <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-doramed-primary via-cyan-400 to-teal-300"
            >تکنولوژی پزشکی</span
          >
        </h2>
        <p class="text-gray-400 text-sm md:text-base max-w-lg leading-relaxed">
          بررسی جدیدترین دستاوردهای هوش مصنوعی در سلامت، گجت‌های پوشیدنی و
          راهکارهای نوین درمان.
        </p>
      </div>

      <a
        href="/blog"
        class="hidden md:flex group items-center gap-3 pl-2 pr-6 py-2 rounded-full border border-white/10 bg-white/5 hover:bg-white/10 hover:border-doramed-primary/50 transition-all duration-300 backdrop-blur-sm"
      >
        <span
          class="text-gray-300 group-hover:text-white font-bold text-sm transition-colors"
          >مشاهده آرشیو</span
        >
        <div
          class="w-10 h-10 rounded-full bg-doramed-primary text-white flex items-center justify-center group-hover:scale-110 group-hover:rotate-180 transition-all duration-500 shadow-[0_0_15px_rgba(6,182,212,0.5)]"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            class="w-5 h-5"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"></path>
          </svg>
        </div>
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {
        latestPosts.map((post, index) => (
          <article
            class="group relative flex flex-col h-full perspective-1000"
            style={`animation-delay: ${index * 150}ms`}
          >
            <div class="relative h-full bg-[#111827] border border-white/5 rounded-[2rem] overflow-hidden transition-all duration-500 hover:-translate-y-2 hover:shadow-[0_20px_40px_-15px_rgba(6,182,212,0.1)] group-hover:border-doramed-primary/30 flex flex-col [mask-image:radial-gradient(white,black)] transform-gpu">
              <a
                href={`/blog/${post.slug}`}
                class="relative h-64 overflow-hidden block"
              >
                <div class="absolute inset-0 bg-gradient-to-t from-[#111827] via-transparent to-transparent z-10 opacity-80" />

                <Image
                  src={post.data.image}
                  alt={post.data.title}
                  width={600}
                  height={400}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 group-hover:rotate-1"
                />

                <div class="absolute top-4 right-4 z-20">
                  <span
                    class={`px-3 py-1.5 rounded-xl backdrop-blur-md border text-xs font-bold shadow-lg transition-all ${getCategoryColor(post.data.tags[0])}`}
                  >
                    {post.data.tags[0]}
                  </span>
                </div>

                <button
                  class="absolute top-4 left-4 z-20 w-8 h-8 rounded-full bg-black/40 backdrop-blur border border-white/10 text-white flex items-center justify-center opacity-0 group-hover:opacity-100 translate-y-2 group-hover:translate-y-0 transition-all duration-300 hover:bg-doramed-primary"
                  aria-label="اشتراک گذاری"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                    stroke="currentColor"
                    class="w-4 h-4"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M7.217 10.907a2.25 2.25 0 100 2.186m0-2.186c.18.324.283.696.283 1.093s-.103.77-.283 1.093m0-2.186l9.566-5.314m-9.566 7.5l9.566 5.314m0 0a2.25 2.25 0 103.935 2.186 2.25 2.25 0 00-3.935-2.186zm0-12.814a2.25 2.25 0 103.933-2.185 2.25 2.25 0 00-3.933 2.185z"
                    />
                  </svg>
                </button>
              </a>

              <div class="p-6 flex flex-col flex-grow relative">
                <div class="flex items-center justify-between text-xs text-gray-400 mb-4 font-medium border-b border-white/5 pb-4">
                  <div class="flex items-center gap-2">
                    <div class="w-6 h-6 rounded-full bg-gradient-to-tr from-doramed-primary to-cyan-400 flex items-center justify-center text-white text-[10px] font-bold">
                      {post.data.author ? post.data.author.charAt(0) : "D"}
                    </div>
                    <span class="text-gray-300">
                      {post.data.author || "تیم دورامد"}
                    </span>
                  </div>
                  <div class="flex items-center gap-3">
                    <span class="flex items-center gap-1">
                      <svg
                        class="w-3.5 h-3.5 text-doramed-primary"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                        />
                      </svg>
                      {formatDate(post.data.pubDate)}
                    </span>
                  </div>
                </div>

                <h3 class="text-xl font-bold text-white mb-3 line-clamp-2 leading-snug group-hover:text-cyan-400 transition-colors">
                  <a
                    href={`/blog/${post.slug}`}
                    class="before:absolute before:inset-0"
                  >
                    {post.data.title}
                  </a>
                </h3>

                <p class="text-gray-400 text-sm leading-6 line-clamp-2 mb-6 flex-grow">
                  {post.data.description}
                </p>

                <div class="mt-auto pt-4 flex items-center justify-between">
                  <span class="text-xs font-medium text-gray-500 flex items-center gap-1">
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                      />
                    </svg>
                    {getReadTime(post.data.description)} دقیقه مطالعه
                  </span>

                  <div class="flex items-center gap-2 text-sm font-bold text-white group-hover:text-doramed-primary transition-colors group-hover:translate-x-[-4px] duration-300">
                    خواندن مقاله
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      class="w-4 h-4"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"
                      />
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </article>
        ))
      }
    </div>

    <div class="mt-12 text-center md:hidden">
      <a
        href="/blog"
        class="inline-flex items-center gap-2 px-8 py-4 rounded-2xl bg-gradient-to-r from-white/5 to-white/10 border border-white/10 text-white font-bold hover:from-doramed-primary/20 hover:to-cyan-500/20 hover:border-doramed-primary/50 transition-all w-full justify-center"
      >
        مشاهده همه مقالات
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          class="w-4 h-4"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  /* انیمیشن‌های کاستوم برای پس‌زمینه */
  @keyframes pulse-slow {
    0%,
    100% {
      opacity: 0.2;
      transform: scale(1);
    }
    50% {
      opacity: 0.3;
      transform: scale(1.1);
    }
  }
  @keyframes pulse-slower {
    0%,
    100% {
      opacity: 0.1;
      transform: translate(0, 0);
    }
    50% {
      opacity: 0.2;
      transform: translate(20px, -20px);
    }
  }
  .animate-pulse-slow {
    animation: pulse-slow 8s infinite ease-in-out;
  }
  .animate-pulse-slower {
    animation: pulse-slower 12s infinite ease-in-out;
  }
</style>
